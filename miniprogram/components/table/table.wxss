:host {
    width: 100%;
}

.table-view {
    box-sizing: border-box;
}

.table-overlay {
    position: absolute;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 2rpx solid black;
    box-sizing: border-box;
}

.table-container {
    font-size: 32rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
}

.table-header, .table-body {
    display: flex;
    flex-direction: row;
    border-top: 2rpx solid black;
}

.table-header-viewport {
    overflow: hidden;
}

.table-header-container {
    position: relative;
}

.table-pinned-left-viewport {
    width: 80rpx;
    overflow: hidden;
    border-bottom: 2rpx solid black;
}

.table-pinned-left-container {
    position: relative;
}

.table-pinned-left-header .table-cell, .table-pinned-left-container .table-cell {
    width: 80rpx;
    border-left: 2rpx solid black;
}

.table-header-viewport, .table-body-viewport {
    box-sizing: border-box;
    border-right: 2rpx solid black;
}

.table-body-viewport {
    width: calc(100% - 80rpx);
    border-bottom: 2rpx solid black;
}

.table-row {
    display: flex;
    flex-direction: row;
    border-bottom: 2rpx solid black;
    line-height: 40rpx;
}

.table-row:last-child {
    border-bottom: none;
}

.table-cell {
    min-width: 80rpx;
    max-width: 375rpx;
    padding: 0 10rpx;
    border-right: 2rpx solid black;
    word-break: break-all;
    box-sizing: border-box;
}
